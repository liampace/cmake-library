{
    "version": 3,
    "configurePresets": [
        {
            "name": "ninja-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "ninja-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": "ninja-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "macos-base",
            "hidden": true,
            "inherits": "ninja-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": [ "windows-base", "debug" ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": [ "release", "x64-debug" ]
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": [ "windows-base", "debug" ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "inherits": [ "release", "x86-debug" ]
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": [ "linux-base", "debug" ]
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": [ "linux-base", "release" ]
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "inherits": [ "macos-base", "debug" ]
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": [ "macos-base", "release" ]
        }
    ]
}
